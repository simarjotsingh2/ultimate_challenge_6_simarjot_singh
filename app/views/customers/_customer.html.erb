<!-- app/views/customers/_customer.html.erb -->

<div class="customer-card box">
  <% if customer.image.attached? %>
    <%= image_tag customer.image, class: "customer-image" %>
  <% else %>
    <%= image_tag "default_avatar.png", class: "customer-image" %>
  <% end %>

  <div class="customer-details">
    <h2><%= customer.full_name %></h2>
    <p><strong>Phone:</strong> <%= customer.phone_number %></p>
    <% if customer.email_address.present? %>
      <p><strong>Email:</strong> <%= mail_to customer.email_address %></p>
    <% else %>
      <p><strong>Email:</strong> <em>Not provided</em></p>
    <% end %>
    <p><strong>Notes:</strong> <%= customer.notes %></p>
  </div>
</div>
